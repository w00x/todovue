<div id="container-todo">
  <div class="row">
    <div class="col-md-12">
      <form class="form-inline">
        <div class="form-group">
          <input class="form-control" v-model="description">
        </div>
        <button type="button" v-on:click="add_new_todo" class="btn btn-default">Guardar</button>
      </form>
    </div>
  </div>

  <todo-item v-for="todo in todos" :key="todo.id" :todo="todo" v-on:deleteditem="delitem" v-on:updateditem="upditem"></todo-item>
</div>

<%= render 'main/components/todo_item' %>

<script type="text/javascript">
  $(document).ready(form_container);
</script>
